- content_for :body_class, "project"

.content
  .content-container
    .content-margin-top
    .content-row
      %p
        -# if @project.logo.present?
        -#  %span.logo
        %span.h2like
          = @project.title
        %span.date
          = @project.start_date.strftime("%B %d, %Y").upcase
          \-
          - if @project.end_date.present?
            = @project.end_date.strftime("%B %d, %Y").upcase
          - else 
            PRESENT
    
    .content-row
      %p
        - if @project.url.present?
          = link_to "#{@project.url}", @project.url, :class => "c2a"

      - if @project.expanded_info.present?
        #{ raw($redcarpet_markdown.render( @project.expanded_info )) }