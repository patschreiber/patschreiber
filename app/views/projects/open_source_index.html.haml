.container-content
  .row
    .one
      %h1.text-center
        Open Source
    .row
      .column
        .projects
          - @projects.each_with_index do |p, index|
            %a.project.box.project-floating{ class: "project-colorized-#{index}", :href => open_source_project_path(p.title) }
              %h3.title
                = p.title
              .dates
                %p
                  = render partial: "shared/project_dates", locals: { project: p }
              .slug
                %p
                  = p.slug
              .read-more
                Read more about #{p.title.capitalize}
                %span
                  %small
                    >

