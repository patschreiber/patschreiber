@import "fonts";
@import "colors";


* {
  
}


/*
##################################################################
#                     Universal Attributes                       #
##################################################################
*/


$nav_width: 300px;


/*
##################################################################
#                     Universal Styling                          #
##################################################################
*/


html {
}

body, html {
  height: 100%;
}

body {
  margin: 0;
  color: #333;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-family: 'Open Sans', 'Helvetica', 'Arial', sans-serif;
  height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-family: 'Open Sans', 'Helvetica', 'Arial', sans-serif; 
  font-weight: normal;
}

h1 {
  font-size: 52px;
}

h2 {
  font-size: 44px;
}

h3 {
  font-size: 36px;
}

h4 {
  font-size: 28px;
}

h5 {
  font-size: 20px;
}

h6 {
  font-size: 12px;
}

p {
  font-family: 'Open Sans' arial, sans-serif;
  font-size: 16px;
}

.button {
  padding: 5px 10px 5px 10px;
  border: 1px solid #000;
  border-radius: 25px;
}


/*
##################################################################
#                     Utilities Styling                          #
##################################################################
*/


.hr {
  border-top: 1px solid #FFF;
  margin: 0 30px 0 30px;
  opacity: 0.3;
} 

.h1like, .h2like, .h3like, .h4like, .h5like, .h6like {
  font-family: 'Quicksand-Light';
  margin: 30px 0 0 0;
}

.h1like {
  font-size: 52px;
}

.h2like {
  font-size: 44px;
}

.h3like {
  font-size: 36px
}

.h4like {
  font-size: 28px;
}

.h5like {
  font-size: 20px;
}

.h6like {
  font-size: 12px;
}


.content {
  margin: 0 0 0 $nav_width;
}

.content-row {
  width: 100%;
}

.content-container {
  margin: 0 30px 0 30px;
}

.clear {
  clear: both;
}

.text-center {
  text-align: center;
}

.row {
  clear: both;
}


.nav-menu-content {
  height: auto;
}


.nav-menu {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: $nav_width;
  background-color: $orange;
  overflow: hidden;

  color: #FFF;
  float: left;

  background-image: -webkit-gradient(radial,center top,0,center top,559,color-stop(0,$orange),color-stop(1,$light_red));
  background-image: -ms-radial-gradient(center top,ellipse cover,$orange 0,$light_red 100%);
  background-image: -moz-radial-gradient(center top,ellipse farthest-corner,$orange 0,$light_red 100%);
  background-image: -o-radial-gradient(center top,ellipse cover,$orange 0,$light_red 100%);

  /* MSIE */
  filter: progid:DXImageTransform.Microsoft.Gradient(
          startColorstr=#FF7E40, endColorstr=#E53C2F);
}

.nav-menu-content {
  height:100%;
  overflow-y: scroll;
  width: 317px;

  .about {
    font-size: 16px;
    margin: 15px 30px 15px 30px;
  }

  .hr {
    margin-top: 30px;
    margin-bottom: 30px;
  }

  p, .h1like, .h2like, .h3like, .h4like, .h5like, .h6like {
    margin: 15px 30px 15px 30px;
  }

}