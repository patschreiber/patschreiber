@import "fonts";
@import "colors";


* {
  
}


/*
##################################################################
#                     Universal Attributes                       #
##################################################################
*/


$nav_width: 300px;


/*
##################################################################
#                     Universal Styling                          #
##################################################################
*/


html {
}

body, html {
  height: 100%;
}

body {
  margin: 0;
  color: #333;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-family: 'Open Sans', 'Helvetica', 'Arial', sans-serif;
  height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-family: 'Open Sans', 'Helvetica', 'Arial', sans-serif; 
  font-weight: normal;
}

h1 {
  font-family: "Quicksand-Light";
  font-size: 52px;
}

h2 {
  font-size: 44px;
}

h3 {
  font-family: "Quicksand-Light";
  font-size: 36px;
}

h4 {
  font-size: 28px;
}

h5 {
  font-size: 20px;
}

h6 {
  font-size: 12px;
}

p {
  font-family: 'Open Sans' arial, sans-serif;
  font-size: 18px;
}

  .h1like, .h2like, .h3like, .h4like, .h5like, .h6like {
    margin: 15px 30px 15px 30px;
  }

.button {
  padding: 5px 10px 5px 10px;
  border: 1px solid #000;
  border-radius: 25px;
}

.date {
  letter-spacing: 3px;
}


a {
  color: darken(#FFF, 50%);
  text-decoration: none;

  transition: color .25s ease-in-out;
  -moz-transition: color .25s ease-in-out;
  -webkit-transition: color .25s ease-in-out;

  &:hover {
    color: $green;
    border-bottom: 1px solid $green;

    .nav-circle {
      border: 1px solid $green;
    }
  }
}

a.c2a {
  color: darken(#FFF, 30%);
  padding: 5px 10px 5px 10px;
  border: 1px solid darken(#FFF, 30%);
  border-radius: 25px;
  text-decoration: none;

  &:hover {
    color: $green;
    border-color: $green;
    text-decoration: none;
  }
}

.technologies-used {
  font-size: 14px;
  font-style: italic;
}

.nav-circle {
  font-size: 40px;
  border: 1px solid darken(#FFF, 50%);
  border-radius: 25px;
  padding: 0 10px 0 14px;

  transition: border .25s ease-in-out;
  -moz-transition: border .25s ease-in-out;
  -webkit-transition: border .25s ease-in-out;
}

#disqus_thread {
  margin: 30px 0 0 0;
}

/*
##################################################################
#                     Utility Styling                            #
##################################################################
*/


.hr {
  border-top: 1px solid #FFF;
  opacity: 0.3;
} 

.h1like, .h2like, .h3like, .h4like, .h5like, .h6like {
  font-family: 'Quicksand-Light';
  margin: 30px 0 0 0;
}

.h1like {
  font-size: 52px;
}

.h2like {
  font-size: 44px;
}

.h3like {
  font-size: 36px
}

.h4like {
  font-size: 28px;
}

.h5like {
  font-size: 20px;
}

.h6like {
  font-size: 12px;
}


.content {
  margin: 0 0 0 $nav_width;
}

.content-row {
  width: 100%;
}

.content-container {
  margin: 100px 30px 0 60px;
}

.clear {
  clear: both;
}

.text-center {
  text-align: center;
}

.row {
  clear: both;
}

.pull-right {
  float: right;
}

.pull-left {
  float: left;
}

.profile-img {
  background-image: url(profile.png);
  margin: 0 auto;
  margin-top: 65px;
  border-radius: 75px;
  background-color: black;
  height: 150px;
  width: 150px;
}

.page-title {
  margin: 30px 0 30px 0;
}


/*
##################################################################
#                     Site Sections                              #
##################################################################
*/

.footer {
  font-size: 12px;
  margin-bottom: 65px;

  .divider {
    font-size: 16px;
    margin: 0 .5em 0 .5em;
  }
}

.nav-expand {
  color: #FFF;
  vertical-align: middle;
  position: fixed;
  top: 0;
  left: 310px;
  width: 20px;
  height: 50px;
  padding: 5px 10px 5px 10px;
  background-color: darken($orange, 3%);
  z-index: 5;

  .collapsed-nav {
    display: none;
    list-style-type: none;
  }

  ul li {
    display: inline;
    padding-right: 30px;
  }

  a {
    color: lighten($orange, 15%);
  }

  a:hover {
    border-bottom: 1px solid lighten($orange, 15%);
  }

  #navigation-icon {
    position: absolute;
    top: 5px;
    left: -5px;
    width: 50px;
    height: 50px;
  }

  #navigation-icon-collapsed {
    position: absolute;
    top: 5px;
    left: 15px;
    width: 50px;
    height: 50px;
    display: none;
  }
}

.nav-expand:hover {
  cursor: pointer;
}

.nav-menu {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: $nav_width;
  background-color: $light_red;
  overflow: hidden;
  color: #FFF;
  float: left;

  ul {
    list-style-type: none;
  }

  li {
    margin: 15px 0 0 0;
  }

  background-image: -webkit-gradient(radial,center top,0,center top,559,color-stop(0,$orange),color-stop(1,$light_red));
  background-image: -ms-linear-gradient(top, $orange 0%,$light_red 100%);
  background-image: -moz-linear-gradient(center top, $orange 0,$light_red 100%);
  background-image: -o-radial-gradient(radial,center top,ellipse cover,$orange 0,$light_red 100%);
  /* MSIE */
  filter: progid:DXImageTransform.Microsoft.Gradient(
          startColorstr=#FF7E40, endColorstr=#E53C2F);
}

.nav-menu-arrow {
  background-color: rgba(255,255,255, 0.2);
  height: 50px;
  width: 300px;
  display: none;
}

#nav-menu-arrow-top {
  border-bottom: 1px solid rgba(255,255,255, 0.25);
  position: absolute;
  top: 0;
  left: 0;

  #arrow-up {
    background: url(navigation/arrow_up.svg) no-repeat center;
    height: 36px;
    width: 150px;
    padding: 7px 0 7px 0;
    margin: 0 auto;
  }
}

#nav-menu-arrow-bottom {
  border-top: 1px solid rgba(255,255,255, 0.25);
  position:absolute;
  bottom:0;

  #arrow-down {
    background: none, url(navigation/arrow_down.svg) no-repeat center;
    height: 36px;
    width: 150px;
    padding: 7px 0 7px 0;
    margin: 0 auto;
  }
}

.nav-menu-content {
  height:100%;
  overflow-y: scroll;
  width: 317px;
  margin: 0px 0 0px 0;

  a {
    color: lighten($orange, 15%);
  }

  a:hover {
    border-bottom: 1px solid lighten($orange, 15%);
  }

  .nav-slug {
    font-size: 16px;
    margin: 15px 30px 15px 30px;
  }

  .c2a {
    color: $orange;
    background-color: #FFF;
    padding: 3px 0px 3px 0px;
    border: 1px solid #FFF;
    border-radius: 25px;
    text-decoration: none;
    transition: color .25s ease-in-out, border .25s ease-in-out;
    -moz-transition: color .25s ease-in-out, border .25s ease-in-out;
    -webkit-transition: color .25s ease-in-out, border .25s ease-in-out;
  }

  .c2a:hover {
    color: lighten($orange, 15%);
    border-color: $orange;
  }

  .hr {
    margin: 30px;
  }

  .justified {
    width: 100px;
  }

  a.resume-version {
    font-size: 12px;
    color: lighten($orange, 15%);
    margin: 0 0 0 15px;
  }

  a.resume-version:hover {
    border-bottom: 1px solid lighten($orange, 15%);
  }
}


body.projects_index {
  .content {
    .hr {
      border-top: 1px solid #333;
      opacity: 0.3;
    }
  }
}


body.project {

  p {
    line-height: 33px;
    font-size: 18px;
    margin: 0 auto;
    margin-top: 1em;
    margin-bottom: 1em;
    max-width: 700px;
  }

  .h2like {
    margin-right: 30px;
  }

  .c2a {
    margin: 100px 0 0 0;
  }
}


body.contact_me {
  ul li {
    margin: 15px 0 0 0;
  }
}


body.resume_root {
  ul.skills li {
    display: inline;
    list-style-type: none;
  }

  section {
    margin: 30px 0 30px 0;
  }
}